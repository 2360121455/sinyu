<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.sinyu.energy.portal.mapper.MenuMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="cn.sinyu.energy.portal.model.Menu">
        <id column="menu_code" property="menuCode" />
        <result column="ID" property="id" />
        <result column="menu_name" property="menuName" />
        <result column="menu_level" property="menuLevel" />
        <result column="menu_parent_code" property="menuParentCode" />
        <result column="menu_parent_name" property="menuParentName" />
        <result column="menu_top_code" property="menuTopCode" />
        <result column="path" property="path" />
    </resultMap>
    <select id="findByMenuCode" resultType="cn.sinyu.energy.portal.VO.MenuVO">
        SELECT id,menu_name,menu_code,path
        FROM iEMSOnLine.dbo.menu
        Where menu_parent_code = #{menuCode}
    </select>

</mapper>
